{
  "name": "@vendure/sentry-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sentry-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/sentry-plugin"
      },
      "outputs": ["{projectRoot}/lib"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --fix .",
        "cwd": "packages/sentry-plugin"
      }
    }
  },
  "tags": ["type:plugin", "scope:monitoring"]
}
