{
  "name": "@vendure/elasticsearch-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/elasticsearch-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/elasticsearch-plugin"
      },
      "outputs": ["{projectRoot}/lib"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --fix .",
        "cwd": "packages/elasticsearch-plugin"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --run",
        "cwd": "packages/elasticsearch-plugin"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --run",
        "cwd": "packages/elasticsearch-plugin/e2e"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["type:plugin", "scope:search"]
}
