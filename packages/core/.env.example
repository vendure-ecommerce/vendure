# Vendure Core Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database connection (used by both TypeORM and Prisma)
# Examples:
# PostgreSQL: postgresql://user:password@localhost:5432/vendure
# MySQL:      mysql://user:password@localhost:3306/vendure
# SQLite:     file:./dev.db
DATABASE_URL="postgresql://vendure:vendure@localhost:5432/vendure"

# Test database (for integration/E2E tests)
TEST_DATABASE_URL="postgresql://vendure:vendure@localhost:5432/vendure_test"

# =============================================================================
# PRISMA CONFIGURATION (Phase 2 Migration)
# =============================================================================

# Enable Prisma ORM (default: false)
# Set to 'true' to use Prisma instead of TypeORM
VENDURE_ENABLE_PRISMA=false

# Enable Prisma query logging (default: false)
# Useful for development and debugging
# WARNING: Logs all SQL queries - use only in development!
PRISMA_LOG_QUERIES=false

# Prisma log level
# Options: query, info, warn, error
# PRISMA_LOG_LEVEL=warn

# =============================================================================
# TYPEORM CONFIGURATION (Legacy - will be removed after Phase 2)
# =============================================================================

# TypeORM logging (default: false)
TYPEORM_LOGGING=false

# Synchronize database schema (DEV ONLY - never use in production!)
TYPEORM_SYNCHRONIZE=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Cookie secret (change in production!)
COOKIE_SECRET=your-secret-key-change-this-in-production

# =============================================================================
# REDIS (Optional - for session storage and caching)
# =============================================================================

# REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS (Phase 2 Migration)
# =============================================================================

# Gradual rollout flags (fine-grained control)
# VENDURE_ENABLE_PRISMA_READS=false  # Use Prisma for read operations
# VENDURE_ENABLE_PRISMA_WRITES=false # Use Prisma for write operations

# =============================================================================
# MONITORING & DEBUGGING
# =============================================================================

# Enable detailed error messages (DEV ONLY)
DEBUG=false

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Copy this file to .env and customize for your environment
# 2. Never commit .env to version control
# 3. Different values for dev/staging/production environments
# 4. Use environment-specific .env files:
#    - .env.development
#    - .env.staging
#    - .env.production
# 5. During Phase 2 migration, gradually enable Prisma features
#
