{
  "name": "@vendure/cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/cli"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --fix .",
        "cwd": "packages/cli"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --run",
        "cwd": "packages/cli"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --run",
        "cwd": "packages/cli/e2e"
      },
      "dependsOn": ["build"]
    },
    "ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/cli"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^ci"]
    }
  },
  "tags": ["type:application", "scope:cli"]
}
